        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Gangnam2kiAndroidStudy">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="myapp" />
                <data android:host="recipes" />
            </intent-filter>
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="https" />
                <data android:host="gangnam2-android.web.app" />
                <data android:pathPrefix="/recipes" />
            </intent-filter>
        </activity>

        <provider
            android:name=".core.provider.RecipeProvider"
            android:authorities="com.survivalcoding.gangnam2kiandroidstudy.provider"
            android:exported="true"
            android:readPermission="com.survivalcoding.gangnam2kiandroidstudy.READ_RECIPE" />
    </application>

</manifest>